{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2020",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "outDir": "dist/esm",
    "rootDir": ".",
    "declarationDir": "dist/typings",
    "declaration": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "allowJs": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "lib": [
      "DOM",
      "ESNext"
    ],
    "paths": {
      "@transaction-reader": [
        "src/services/transacton-reader/transaction.reader.ts"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
