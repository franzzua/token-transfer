{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2020",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "dist/esm",
    "rootDir": ".",
    "declarationDir": "dist/typings",
    "declaration": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "allowJs": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
