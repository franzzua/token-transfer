{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "allowJs": true,
    "resolveJsonModule": true,
    "lib": [
      "ESNext",
      "dom"
    ],
    "paths": {
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "types": [
      "preact",
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
